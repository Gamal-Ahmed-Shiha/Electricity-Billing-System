<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="300" prefWidth="400" style="-fx-background-color: white; -fx-background-radius: 10; -fx-border-color: #E0E0E0; -fx-border-radius: 10;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">

    <!-- Title -->
    <Label layoutX="20" layoutY="20" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Add new Reading" />

    <!-- Form Fields -->
    <VBox layoutX="20" layoutY="60" prefWidth="360" spacing="15">
        <!-- Reading Input -->
        <VBox spacing="5">
            <TextField fx:id="readingInput" promptText="Reading" />
            <Label style="-fx-font-size: 10px; -fx-text-fill: gray;" text="Help text" />
        </VBox>

        <!-- Meter Code Input -->
        <VBox spacing="5">
            <TextField fx:id="meterCodeInput" promptText="Meter Code" />
            <Label style="-fx-font-size: 10px; -fx-text-fill: gray;" text="Help text" />
        </VBox>

        <!-- Date Input -->
        <VBox spacing="5">
            <DatePicker fx:id="dateInput" promptText="Date" />
            <Label style="-fx-font-size: 10px; -fx-text-fill: gray;" text="Help text" />
        </VBox>
    </VBox>

    <!-- Buttons -->
    <HBox alignment="CENTER_RIGHT" layoutX="250" layoutY="260" spacing="20">
        <Button style="-fx-text-fill: purple;" text="SUBMIT COMPLAIN" textAlignment="CENTER" textOverrun="LEADING_ELLIPSIS" />
        <Button style="-fx-text-fill: purple;" text="CANCEL" />
    </HBox>

</AnchorPane>
