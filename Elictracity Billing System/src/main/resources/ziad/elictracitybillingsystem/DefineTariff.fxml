<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.OperatorPanelController" prefHeight="400" prefWidth="600" stylesheets="@../../Styles/styles.css">
    <VBox spacing="20" layoutX="50" layoutY="50">
        <Label text="Define Tariff" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

        <TextField promptText="Enter Customer Category" style="-fx-pref-width: 400px; -fx-font-size: 14px;"/>
        <TextField promptText="Enter New Tariff Rate" style="-fx-pref-width: 400px; -fx-font-size: 14px;"/>

        <Button text="Save Tariff" onAction="#saveTariff"/>

        <Label text="Tariff Details:" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <Label text="(Details will appear here after saving the tariff)" style="-fx-font-size: 14px;"/>
    </VBox>
    <Button text="Back" layoutX="20" layoutY="20" onAction="#goBack"/>
</AnchorPane>
