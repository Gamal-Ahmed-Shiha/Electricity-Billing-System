<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>

<AnchorPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controllers.OperatorPanelController" prefHeight="700" prefWidth="600"
            style="-fx-background-color: #f9f9f9; -fx-border-color: #ddd; -fx-border-width: 1; -fx-border-radius: 10;">

    <Button text="Back" layoutX="20" layoutY="20" onAction="#goBack"
            style="-fx-background-color: #FFFFFF; -fx-border-color: #ccc; -fx-text-fill: #333;"/>

    <VBox layoutX="30" layoutY="80" spacing="25" prefWidth="540" alignment="TOP_CENTER">

        <Label text="Add new Customer Payment" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;"/>

        <GridPane hgap="10" vgap="20" prefWidth="540">
            <VBox spacing="5" GridPane.rowIndex="0" GridPane.columnIndex="0">
                <TextField promptText="Reading" prefWidth="540" style="-fx-background-radius: 8; -fx-border-color: #ccc; -fx-border-radius: 8; -fx-padding: 10;"/>
                <Label text="Help text" style="-fx-font-size: 10px; -fx-text-fill: gray;"/>
            </VBox>

            <VBox spacing="5" GridPane.rowIndex="1" GridPane.columnIndex="0">
                <TextField promptText="Meter Code" prefWidth="540" style="-fx-background-radius: 8; -fx-border-color: #ccc; -fx-border-radius: 8; -fx-padding: 10;"/>
                <Label text="Help text" style="-fx-font-size: 10px; -fx-text-fill: gray;"/>
            </VBox>

            <VBox spacing="5" GridPane.rowIndex="2" GridPane.columnIndex="0">
                <TextField promptText="Date" prefWidth="540" style="-fx-background-radius: 8; -fx-border-color: #ccc; -fx-border-radius: 8; -fx-padding: 10;"/>
                <Label text="Help text" style="-fx-font-size: 10px; -fx-text-fill: gray;"/>
            </VBox>

            <VBox spacing="5" GridPane.rowIndex="3" GridPane.columnIndex="0">
                <TextField promptText="Customer ID" prefWidth="540" style="-fx-background-radius: 8; -fx-border-color: #ccc; -fx-border-radius: 8; -fx-padding: 10;"/>
                <Label text="Help text" style="-fx-font-size: 10px; -fx-text-fill: gray;"/>
            </VBox>

            <VBox spacing="5" GridPane.rowIndex="4" GridPane.columnIndex="0">
                <TextField promptText="Cost" prefWidth="540" style="-fx-background-radius: 8; -fx-border-color: #ccc; -fx-border-radius: 8; -fx-padding: 10;"/>
                <Label text="Help text" style="-fx-font-size: 10px; -fx-text-fill: gray;"/>
            </VBox>

            <VBox spacing="5" GridPane.rowIndex="5" GridPane.columnIndex="0">
                <TextField promptText="Region" prefWidth="540" style="-fx-background-radius: 8; -fx-border-color: #ccc; -fx-border-radius: 8; -fx-padding: 10;"/>
                <Label text="Help text" style="-fx-font-size: 10px; -fx-text-fill: gray;"/>
            </VBox>
        </GridPane>

        <Button text="SUBMIT PAYMENT" style="
                -fx-background-color: #6200EE;
                -fx-text-fill: white;
                -fx-font-size: 16px;
                -fx-font-weight: bold;
                -fx-background-radius: 10;
                -fx-padding: 10 20;
                -fx-cursor: hand;
                -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.2), 8, 0, 0, 4);"/>

    </VBox>
</AnchorPane>
